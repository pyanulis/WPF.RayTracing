<Window x:Class="Pyanulis.RayTracing.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pyanulis.RayTracing"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="100"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" Grid.Row="0" HorizontalAlignment="Left" Height="100"  Margin="111,90,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="btnGenerate" Content="Generate" Width="120" Height="35" Grid.Row="1" HorizontalAlignment="Left" Margin="4,33,0,32" Click="BtnGenerateClick"/>
    </Grid>
</Window>
