<UserControl x:Class="Pyanulis.RayTracing.Controls.ThreadProgressControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Pyanulis.RayTracing.Controls"
             mc:Ignorable="d" d:DesignHeight="31.616" d:DesignWidth="233.958"
             Height="20">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Templates/General.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ProgressBar 
            x:Name="bar"
            Template="{StaticResource ThreadProgressBar}" 
            HorizontalAlignment="Stretch" 
            VerticalAlignment="Stretch"
            Minimum="0"
            Maximum="100"
            />
    </Grid>
</UserControl>
